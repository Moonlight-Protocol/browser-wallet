    "chrome-types": "npm:chrome-types@^0.1.242",
    "buffer": "npm:buffer@^6.0.3",
    "process": "npm:process@^0.11.10"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
