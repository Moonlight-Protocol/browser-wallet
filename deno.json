    "react/jsx-dev-runtime": "npm:react@^18.2.0/jsx-dev-runtime",
    "react-dom": "npm:react-dom@^18.2.0",
    "react-dom/client": "npm:react-dom@^18.2.0/client",
    "@ngneat/elf": "npm:@ngneat/elf@^2.5.1",
    "@ngneat/elf-persist-state": "npm:@ngneat/elf-persist-state@^1.2.1",
    "webextension-polyfill": "npm:webextension-polyfill@^0.10.0",
    "@types/react": "npm:@types/react@^18.2.0",
