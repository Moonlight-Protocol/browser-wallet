{
  "tasks": {
    "dev": "DEV=1 deno run -A --watch src/build.ts",
    "build": "DEV=1 deno run -A src/build.ts",
    "build-prod": "DEV=0 MINIFY=1 deno run -A src/build.ts",
    "update-deps": "rm deno.lock && deno cache --reload src/build.ts",
    "pre-commit": "deno run --allow-run --allow-read src/scripts/pre-commit.ts",
    "prepare": "deno run --allow-read --allow-write src/scripts/install-hooks.ts",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "check": "deno fmt --check && deno lint && deno check **/*.ts"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@": "./src/",
    "@/": "./src/",
